<% provide(:title, "Jobs") %>

<div class="row"><div class="col-md-6 col-md-offset-3">
  <h1>Available Jobs</h1>

  <div class="row">
    <% @jobs.each do |job| %>
      <% if job.user_id != current_user.id %>
        <div class="col-sm-12">
          <div class="thumbnail">
            <div class="caption">
              <h4><%= job.job_title %></h4>
              <p><%= job.description %></p>
              <p><strong>Salary range: </strong> <%= job.minimum_salary %> to <%= job.maximum_salary %></p>
              <p><%= link_to "Apply", apply_job_path(job_id: job.id), method: :post, :class => "btn btn-success" %></p> 
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div></div>
