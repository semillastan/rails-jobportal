<% provide(:title, "Create Job") %>

<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <h2>Create Job</h2>
    <%= form_for(@job, :html => {:class => "form-horizontal"}) do |f| %>

      <%= render "shared/jobs/error_messages" %>

      <div class="form-group">
        <%= f.label :job_title %>
        <%= f.text_field :job_title, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :minimum_salary %>
        <%= f.text_field :minimum_salary, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :maximum_salary %>
        <%= f.text_field :maximum_salary, :class => "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :active, "Status" %>
        <%= f.select :active, [["Active", true], ["Inactive", false]], {}, :class => "form-control" %>
      </div>    
  

      <%= f.submit "Add", :class => "btn btn-primary" %>
      <%= link_to "Cancel", jobs_path, :class => "btn btn-default" %>
    <% end %>

  </div>
</div>
